<div class="container">
<h1>My bookmarks</h1>

<h2>Here are your bookmarks. You can delete a bookmark once you have read the book.</h2>

<% @bookmarks.each do |bookmark|%>

 <div class="card-product">
  <div class="card-product-infos">
    <h3><%= bookmark.book.title %></h3>
      <%= button_to "Delete bookmark", user_bookmark_path(@user.id, bookmark), method: :delete, class: "btn-primary" %>
  </div>
</div>

<% end %>

<%= link_to "Return to homepage", root_path, class: "btn-primary" %>
</div>
